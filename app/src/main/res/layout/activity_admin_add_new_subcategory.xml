<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    >


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/adminAddsubcategoryAppbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/adminAddsubcategoryToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/addNewsubcategoryTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Subcategory"  />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <ImageView
        android:id="@+id/select_subcategory_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/add_image"
        android:layout_below="@+id/adminAddsubcategoryAppbarLayout"
        />


    <EditText
        android:id="@+id/subcategory_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_subcategory_image"
        android:inputType="textMultiLine"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:hint="Subcategory Name..."
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:textColor="@android:color/black"
        android:background="@drawable/editext_design"
        />



    <Button
        android:id="@+id/add_new_subcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subcategory_name"
        android:text="Add subcategory"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:padding="17dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_design"
        />


</RelativeLayout>