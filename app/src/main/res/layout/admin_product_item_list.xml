<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    app:cardCornerRadius="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrey"
        android:orientation="horizontal"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/admin_product_IV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/admin_product_name_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Product Name"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/admin_product_price_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Rs 1000"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/admin_remove_product_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Remove"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:background="@drawable/btn_design"
                android:textColor="@android:color/white"
                android:drawableRight="@drawable/remove"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />

            <ImageButton
                android:id="@+id/admin_edit_product_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_design"
                android:src="@drawable/edit"
                android:padding="3dp"
                />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>